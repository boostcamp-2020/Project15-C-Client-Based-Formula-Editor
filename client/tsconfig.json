{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@ingredients/*": ["src/components/Ingredients/*"],
      "@meal/*": ["src/components/Meal/*"],
      "@set/*": ["src/components/Set/*"],
      "@apis/*": ["src/lib/apis/*"],
      "@constants/*": ["src/lib/constants/*"],
      "@utils/*": ["src/lib/utils/*"],
      "@contexts/*": ["src/contexts/*"],
      "@hooks/*": ["src/hooks/*"],
      "@test/*": ["src/__test__/*"]
    }
  },
  "include": ["./src/**/*"]
}
